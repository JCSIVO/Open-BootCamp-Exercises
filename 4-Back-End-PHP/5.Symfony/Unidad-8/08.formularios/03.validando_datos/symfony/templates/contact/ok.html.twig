{# contact/ok.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="alert alert-success">
        <strong>Excelente!</strong> No hay errores en el formulario:<br><br>
        <ul>
            <li>Hemos recibido su mensaje, luego nos pondremos en contacto, gracias!</li>
        </ul>
    </div>

    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ title }}</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-hover" style="width:900px; text-align:left">
                        <tbody>
                            <tr>          
                                <td>{{ form_label(form.name) }}</td>
                                <td>{{ contact.name }}</td>
                            </tr>
                            <tr>          
                                <td>{{ form_label(form.email) }}</td>
                                <td>{{ contact.email }}</td>
                            </tr>
                            <tr>          
                                <td>{{ form_label(form.area) }}</td>
                                <td>{{ contact.area }}</td>
                            </tr>
                            <tr>          
                                <td>{{ form_label(form.title) }}</td>
                                <td>{{ contact.title }}</td>
                            </tr>
                            <tr>          
                                <td>{{ form_label(form.message) }}</td>
                                <td>{{ contact.message }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <p><a href="{{ path('index')}}" class="btn btn-primary" 
                          role="button" style="width: 100px">Come Back</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}