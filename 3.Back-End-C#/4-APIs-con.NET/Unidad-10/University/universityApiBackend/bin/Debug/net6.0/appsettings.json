{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "UniversityDb": "Server=localhost\\SQLEXPRESS;Database=UniversityDB;TrustServerCertificate=True;" // Trusted_Connection=True; TrustServerCertificate=True; encrypt=False;

  },
  "JsonWebToken": {
    "ValidateIssuerSigningKey": true,
    "IssuerSigningKey": "", // 482eb80786195f804da09b125de253d0 //64565484645412388754547545
    "ValidateIssuer": true,
    "ValidIssuer": "http://localhost:7208",
    "ValidateAudience": true,
    "ValidAudience": "http://localhost:7208",
    "RequireExpirationsTime": true,
    "ValidateLifetime": true
  },
  "Serilog": {
    "MinimunLevel": {
      "Default": "Verbose",
      "Overeide": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.LifeTime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "UniversityDB",
          "restrictedToMinimunLevel": "Verbose",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "schemaName": "EventLogging",
            "autoCreateSqlTable": true,
            "batchPostingLimit": 1000,
            "period": "00.00:00:30"
          }
        }
      }
    ]
  }
}
    
  

