{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <!-- begin: controller embed -->
    {{ render(controller(
        'App\\Controller\\DefaultController::recentArticles',
        { 'max': 3 }
    )) }}
    <!-- end: controller embed -->
    {% set article = {title: 'title', authorName:' Jhon Doe', body: 'Lorem ipsum'} %}
    <!-- begin: template embed -->
      {{ include('article/article_details.html.twig', { 'article': article }) }}
    <!-- end: template embed -->
</div>
{% endblock %}
